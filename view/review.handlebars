<div class="card medium" style="width: 90%;">
    <div class="card-content black-text">
        <span class="card-title">{{title}} <span id="postId">{{id}}</span></span>
        <p>{{description}}</p>
        <p>{{User.username}}</p>
        <p>{{createdAt}}</p>
    </div>
    <div class="card-action">
        {{#each Reviews}}
        <p>{{review}}</p>
        {{/each}}
    </div>
    <form id="new-comment">
        <input type="text" placeholder="leave a review" id="review">
        <button type="submit" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons"></i>Submit</button>
    </form>
</div>

<script src="/js/review.js"></script>